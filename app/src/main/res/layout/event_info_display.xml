<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
  <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />
 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
 <EditText
        android:id="@+id/disp_DateCreated"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:ems="15"
        android:textSize="10dip"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:inputType="text"
        />
  <EditText
         android:id="@+id/event_disp_type"
          android:layout_below="@id/disp_DateCreated"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:ems="20"
         android:inputType="text" />
  
  <EditText
         android:id="@+id/event_disp_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/event_disp_type"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:ems="20"
         android:inputType="text" />
   
    <EditText
         android:id="@+id/disp_singleEvent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/event_disp_name"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:ems="20"
         android:focusable="false"
         android:inputType="text" />
   
    <EditText
         android:id="@+id/disp_eventStart"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/disp_singleEvent"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:ems="20"
         android:inputType="text" 
         />
   
      <EditText
         android:id="@+id/disp_eventEnd"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/disp_eventStart"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="8dp"
         android:ems="20"
         android:inputType="text" 
        />
   
    <EditText
        android:id="@+id/disp_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/disp_eventEnd"
        android:ems="20"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:inputType="text" />
    <Button
        android:id="@+id/upd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/disp_discription"
        android:ems="20"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:inputType="text" />
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/disp_discription"
        android:layout_toRightOf ="@id/upd_button"
        android:layout_toEndOf = "@id/upd_button"
        android:ems="20"
         android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:inputType="text" />
    
</RelativeLayout>
</ScrollView>
</LinearLayout>