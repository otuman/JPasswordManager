<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />
 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
  <EditText
        android:id="@+id/fupd_DateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:ems="15"
        android:textSize="10dip"
        android:focusable="false"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="15dp"
        android:inputType="text"
        />
 <TextView
        android:id="@+id/textView0"
        android:layout_below="@id/fupd_DateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialtype" />
   <Spinner
        android:id="@+id/fupd_financialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView0"
        android:ems="20"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="15dp"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_below="@id/fupd_financialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialname" />
  <EditText
         android:id="@+id/fupd_financialName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="8dp"
          android:layout_below="@id/textView1"
         android:ems="20"
         android:focusable="true"
         android:inputType="text" >

    </EditText>
     <TextView
        android:id="@+id/textView2"
        android:layout_below="@id/fupd_financialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialnumber" />
    <EditText
        android:id="@+id/fupd_financialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:layout_below="@id/textView2"
        android:ems="20"
        android:inputType="number" />
     <TextView
        android:id="@+id/textView3"
        android:layout_below="@id/fupd_financialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialvisa" />
   <EditText
        android:id="@+id/fupd_financialVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:ems="20"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView4"
        android:layout_below="@id/fupd_financialVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialpin" />
   <EditText
        android:id="@+id/fupd_financialPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
       android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:ems="20"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView5"
        android:layout_below="@id/fupd_financialPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialsec1" />
    
   <EditText
         
         android:id="@+id/fupd_secq1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/textView5"
         android:layout_marginBottom="8dp"
         android:layout_marginLeft="15dp"
         android:ems="20"
         android:focusable="true"
         android:inputType="text"
         />
     <TextView
        android:id="@+id/textView6"
        android:layout_below="@id/fupd_secq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialans1" />
  
    <EditText
        android:id="@+id/fupd_ansq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
         android:layout_below="@id/textView6"
        android:ems="20"
        android:focusable="true"
        android:inputType="text" />
    <TextView
        android:id="@+id/textView7"
        android:layout_below="@id/fupd_ansq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialsec2" />
   <EditText
        android:id="@+id/fupd_secq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:ems="20"
        android:focusable="true"
        android:inputType="text" />
    <TextView
        android:id="@+id/textView8"
        android:layout_below="@id/fupd_secq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/financialans2" />
   <EditText
        android:id="@+id/fupd_ansq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
       android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:ems="20"
        android:inputType="text" />

   <Button
       android:id="@+id/fupd_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/fupd_ansq2"
       android:layout_marginBottom="8dp"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="8dp"
       android:ems="20"
       android:text="@string/financialupd"
       android:inputType="text"
       android:textSize="24sp"
       android:height="60dp"
       android:layout_centerHorizontal="true"/>
   </RelativeLayout>
</ScrollView>
    
</LinearLayout>
